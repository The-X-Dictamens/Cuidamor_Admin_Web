        <img src="assets/img/logo.png" alt="">
        <span class="d-none d-lg-block">Cuidamor</span>
      </a>
    </div><!-- End Logo -->

  </header><!-- End Header -->


<div class="container">
    <br>
    <h1>Empleado en estatus de <%= empleado[0].est_emp %></h1>

    <div class="flex-container">
        <div class="flex-item card">
            <h3>Datos personales</h3>
            <p>Nombre: <%= empleado[0].nom_emp %></p>
            <p>Apellido: <%= empleado[0].pat_emp + " " + empleado[0].mat_emp %></p>
            <p>Correo: <%= empleado[0].cor_datacc %></p>
            <p>Teléfono: <%= empleado[0].tel_emp %></p>
            <p>Puesto: <%= empleado[0].rol_datacc %></p>
        </div>

        <div class="flex-item card">
            <h3>Domicilio:</h3>
            <p>Delegación: <%= empleado[0].del_dir %></p>
            <p>Colonia: <%= empleado[0].col_dir %></p>
            <p>Calle: <%= empleado[0].calle_dir %></p>
            <p>Código Postal: <%= empleado[0].cp_dir %></p>
        </div>

        <div class="flex-item card">
            <h3>Pruebas psicométricas</h3>
            <% if (pruebas.length == 0) { %>
                <p>Aún no se ha aplicado la prueba</p>
                <a href="/PruebaPsico?id=<%= empleado[0].id_emp %>"><button>Aplicar prueba</button></a>
            <% } else { %>
                <p>Resultado de la prueba: <%= pruebas[0].punt_pru %></p>
                <p>Estado: <%= pruebas[0].est_prue %></p>
                <a href="/ReaplicarPruebaPsico?id=<%= empleado[0].id_emp %>"><button>Reaplicar Prueba</button></a>
            <% } %>
        </div>
    </div>

    <div class="card">
        <h3>Documentos:</h3>
        <div class="flex-container">
            <div class="flex-item document-section">
                <h4>INE</h4>
                <iframe src="<%= documentos.ine %>"></iframe>
                <% if (documentos.ine != null) { %>
                    <center>
                        <a href="<%= documentos.ine %>"><button>Ver</button></a>
                        <a href="/EliminarDoc?id=<%= empleado[0].id_emp %>&doc=ine"><button>Eliminar</button></a>
                    </center>
                <% } else { %>
                    <form action="/SubirDoc?id=<%= empleado[0].id_emp %>&tipo=ine" method="post" enctype="multipart/form-data">
                        <center>
                            <input type="file" name="documento">
                            <br>
                            <button type="submit">Subir</button>
                        </center>
                    </form>
                <% } %>
            </div>

            <div class="flex-item document-section">
                <h4>Certificados</h4>
                <iframe src="<%= documentos.certificados %>"></iframe>
                <% if (documentos.certificados != null) { %>
                    <center>
                        <a href="<%= documentos.certificados %>"><button>Ver</button></a>
                        <a href="/EliminarDoc?id=<%= empleado[0].id_emp %>&doc=certificados"><button>Eliminar</button></a>
                    </center>
                <% } else { %>
                    <form action="/SubirDoc?id=<%= empleado[0].id_emp %>&tipo=certificados" method="post" enctype="multipart/form-data">
                        <center>
                            <input type="file" name="documento">
                            <br>
                            <button type="submit">Subir</button>
                        </center>
                    </form>
                <% } %>
            </div>

            <div class="flex-item document-section">
                <h4>Comprobante de domicilio</h4>
                <iframe src="<%= documentos.comprobante %>"></iframe>
                <% if (documentos.comprobante != null) { %>
                    <center>
                        <a href="<%= documentos.comprobante %>"><button>Ver</button></a>
                        <a href="/EliminarDoc?id=<%= empleado[0].id_emp %>&doc=comprobante"><button>Eliminar</button></a>
                    </center>
                <% } else { %>
                    <form action="/SubirDoc?id=<%= empleado[0].id_emp %>&tipo=comprobante_domicilio" method="post" enctype="multipart/form-data">
                        <center>
                            <input type="file" name="documento">
                            <br>
                            <button type="submit">Subir</button>
                        </center>
                    </form>
                <% } %>
            </div>
        </div>
    </div>

    <div class="button-container">
        <% if (empleado[0].est_emp == "Proceso") { %>
            <a href="/AceptarEmpleado?id=<%= empleado[0].id_emp %>"><button>Aceptar</button></a>
            <a href="/RechazarEmpleado?id=<%= empleado[0].id_emp %>"><button>Rechazar</button></a>
        <% } %>
        <% if (empleado[0].est_emp == "Aceptado" || empleado[0].est_emp == "Rechazado") { %>
            <a href="/ProcesarEmpleado?id=<%= empleado[0].id_emp %>"><button>Procesar</button></a>
        <% } %>
    </div>
</div>

